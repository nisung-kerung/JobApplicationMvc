@model JobApplicationMVC.Models.JobApplication
@{
    ViewData["Title"] = "Application Details";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr><th>ID</th><td>@Model.Id</td></tr>
    <tr><th>Name</th><td>@Model.Name</td></tr>
    <tr><th>City</th><td>@Model.City</td></tr>
    <tr><th>Age</th><td>@Model.Age</td></tr>
    <tr><th>Gender</th><td>@Model.Gender</td></tr>
    <tr><th>Position</th><td>@Model.Position</td></tr>
    <tr><th>Experience</th><td>@Model.Experience</td></tr>
    <tr><th>Education</th><td>@Model.Education</td></tr>
    <tr><th>Level</th><td>@Model.Level</td></tr>
</table>

<a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
<a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
<a class="btn btn-danger" href="@Url.Action("Delete", new { id = Model.Id })">Delete</a>
